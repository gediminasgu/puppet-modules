export JAVA_OPTS="-Xms512m -Xmx512m -XX:MaxPermSize=512m"

case $1 in
start)
sh /usr/local/tomcat/bin/startup.sh
;;
stop)
sh /usr/local/tomcat/bin/shutdown.sh
;;
restart)
sh /usr/local/tomcat/bin/shutdown.sh
sh /usr/local/tomcat/bin/startup.sh
;;
status)
ps ax | grep -v grep | grep tomcat > /dev/null
exit $?
;;
esac
exit 0
